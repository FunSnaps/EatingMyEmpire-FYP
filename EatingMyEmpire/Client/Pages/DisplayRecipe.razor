@inherits DisplayRecipeBase

<div class="card m-3" style="min-width: 18rem; max-width:30.5%;">
  <div class="card-header">

    <h3>@Recipe.RecipeName</h3>

  </div>
  <img class="card-img-top imageThumbnail" src="@Recipe.PhotoPath" alt="Recipe Photo" />

  @if (ShowFooter)
  {
    <div class="card-footer text-center">
      <a href="@($"/recipedetails/{Recipe.id}")" class="btn btn-primary m-1">View</a>
      <a href="@($"/editrecipe/{Recipe.id}")" class="btn btn-primary m-1">Edit</a>
    </div>
  }
</div>